<h1><%= @service.name %></h1>
<p> <%= @service.description %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Address</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.address %></td>
        <td><%= link_to 'Show', service %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
