<p id="notice"><%= notice %></p>


<div class="container my-4 d-flex flex-wrap justify-content-between">
      <div class="d-flex flex-wrap justify-content-between col-5">
        <% @services.each do |service| %>
          <div class="card-link-service">
            <%= link_to service_path(service.id), class: "w-100" do %>
              <div class="w-100 mb-4" data-aos="zoom-in">
                <div class="bg-white rounded shadow h-70">
                  <div class= "card-img rounded-top" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("<%= cl_image_path service.photo.key %>")'></div>
                  <div class=" card-infos rounded-bottom d-flex flex-column">
                    <h2><%= service.name.first(60) %><%= "..." if service.name.length > 60 %></h2>
                    <br class="text-muted font-weight-normal"><p> Créer par <span><%= service.user.name %></span> • <i class="fas fa-star star-yellow"></i><i class="fas fa-star star-yellow"></i><i class="fas fa-star star-yellow"></i><i class="fas fa-star star-yellow"></i><i class="fas fa-star star-yellow"></i></p>
                    <small class=" card-trip-pricing text-muted"><%= service.price %> € </small>
                  </div>
                </div>
              </div>
            <% end  %>
          </div>
        <% end %>
      </div>

  <div class="col-5">
    <div class="item">
      <div id="map"
           style="width: 100%; height: 600px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>


