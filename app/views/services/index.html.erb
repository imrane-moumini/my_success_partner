<div class="container my-5">
  <div class="bg-dark">
    <h1 class="text-white">TOEIC</h1>
    <p class="text-white">Choisis ton Success Partner</p>
  </div>
  <div class="row">
    <% @services.each do |service| %>
      <div class="col-12 col-sm-4 mb-3 border">
