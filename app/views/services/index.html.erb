            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
              <small class="text-right flex-shrink-0"><%= link_to 'Réserver', service_path, method: :delete, data: { confirm: "Are you sure you want to book this service?"}, class: 'text-danger' %></small>
