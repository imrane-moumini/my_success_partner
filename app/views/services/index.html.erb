<p id="notice"><%= notice %></p>


<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.digischool.fr/images/article/comment-bien-reussir-ses-examens--lg-3927.jpg)">
  Choisis ton Success Partner</p>
</div>

<div class="container my-5">
  <div class="row">
    <% @services.each do |service| %>
      <div class="col-12 col-sm-4 mb-3 border">
        <div class="bg-white rounded shadow h-100">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://resize.programme-television.ladmedia.fr/r/670,670/img/var/premiere/storage/images/tele-7-jours/news-tv/replay-la-vie-sauvage-france-2-l-incroyable-documentaire-animalier-4318529/77722107-1-fre-FR/REPLAY-La-vie-sauvage-France-2-l-incroyable-documentaire-animalier.jpg)" class= 'movie-img rounded-top'></div>
          <strong class="mx-3"><%= service.name %> <span class="text-muted font-weight-normal"></span></strong>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <p> <%= service.price%>€</p> <i class="fas fa-star star-yellow"></i>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
                <button type="button" class="btn btn-flat" data-toggle="modal">
                 <%= link_to 'Réserver', service_path(service.id), class: 'btn btn-flat' %>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
